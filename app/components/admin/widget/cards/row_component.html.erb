<tr id="<%= dom_id(card) %>" class="homepage-card">
  <td>
    <%= card.label %><br>
    <%= card.title %>
  </td>
  <td><%= card.description %></td>
  <td>
    <%= card.link_text %><br>
    <%= card.link_url %>
  </td>

  <% unless header_section? %>
    <td>
      <%= card.order %>
    </td>
  <% end %>

  <!-- remove conditional once specs have image validations -->
  <td>
    <% if card.image.present? %>
      <%= link_to t("admin.shared.show_image"), card.image.variant(:large), title: card.image.title %>
    <% end %>
  </td>
  <td>
    <%= render Admin::TableActionsComponent.new(card, **options) %>
  </td>
</tr>
