<section id="feed_<%= kind %>" class="widget-feed feed-<%= kind %>">
  <header>
    <h2 class="title"><%= t("welcome.feed.most_active.#{kind}") %></h2>
  </header>

  <% if feed.items.any? %>
    <div class="feed-content">
      <% feed.items.each do |item| %>
        <%= render item_component_class.new(item) %>
      <% end %>
    </div>

    <%= link_to 'عرض الكل', see_all_path, class: "see-all" %>
  <% else %>
    <div class="no-items callout primary"><%= case I18n.locale 
      when :ar then 'لا توجد عناصر لعرضها' 
      when :fr then 'Aucun élément à afficher' 
      else 'No items to display' 
      end %></div>
  <% end %>
  


</section>
