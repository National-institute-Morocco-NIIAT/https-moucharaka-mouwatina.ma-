<%= back_link_to %>

<h2>ID Card Verification for <%= @user.name %></h2>

<p><strong>Document Number:</strong> <%= @user.document_number %></p>

<p><strong>Front:</strong></p>
<%= image_tag @user.front_id_card if @user.front_id_card.attached? %>

<p><strong>Back:</strong></p>
<%= image_tag @user.back_id_card if @user.back_id_card.attached? %>

<%= form_with url: verify_id_card_admin_user_path(@user), method: :patch, data: { confirm: 'Are you sure you want to verify this user\'s ID card?' } do %>
  <%= submit_tag "Verify ID Card", class: "button" %>
<% end %>

<%= link_to "Back to Users", admin_users_path, class: "button hollow" %>