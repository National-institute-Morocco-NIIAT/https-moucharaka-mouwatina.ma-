<%= back_link_to admin_valuators_path %>

<%= link_to t("admin.actions.edit"), edit_admin_valuator_path(@valuator), class: "button hollow float-right" %>

<div class="clear"></div>

<h2><%= @valuator.name %></h2>

<div class="callout highlight">
  <p>
    <strong><%= t("admin.valuators.show.email") %></strong><br>
    <%= @valuator.email %>
  </p>
  <p>
    <strong><%= t("admin.valuators.show.description") %></strong><br>
    <%= @valuator.description.presence || t("admin.valuators.show.no_description") %>
  </p>
  <p>
    <strong><%= t("admin.valuators.show.group") %></strong><br>
    <%= @valuator.valuator_group&.name || t("admin.valuators.show.no_group") %>
  </p>

  <p>
    <strong><%= t("admin.valuators.show.abilities") %></strong><br>
    <%= valuator_abilities(@valuator).presence || t("admin.valuators.show.no_abilities") %>
  </p>
</div>
