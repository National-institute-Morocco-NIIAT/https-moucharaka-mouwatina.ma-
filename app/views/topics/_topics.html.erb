<% if topics.any? %>
  <div class="row column">
    <div class="order">
      <%= render "shared/order_links", i18n_namespace: "comments" %>
    </div>
  </div>
<% else %>
  <%= render "topics/informative_text", topics: topics %>
<% end %>

<% topics.each do |topic| %>
  <%= render "topics/topic", topic: topic %>
<% end %>
